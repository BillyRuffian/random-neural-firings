
.frame.pt-8
  .frame__body
    = form_with model: note do |form|
      = form.text_field :title
      = form.text_area :content, class: 'markdown'
      .row
        .col
          - if note.persisted?
            = link_to 'Cancel', note_path(note)
          - else
            = link_to 'Cancel', notes_path
        .col
          - if note.persisted?
            = link_to 'Delete', note_path(note), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }
          = form.submit class: 'btn-link u-pull-right'